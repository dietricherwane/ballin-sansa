<div class="page-header">
    <div class="icon">
        <span class="ico-arrow-right"></span>
    </div>
    <h1>Types d'ayants droits <small>Créer un type d'ayants droits auquel associer des ayants droits</small></h1>
</div>

<div class = "row-fluid">
  <div class = "span6">
    <%= render 'layouts/flash_messages' %>
    <% if !@error_messages.blank? %>  
      <div class = "alert alert-error">         
        <ul>
        <% @error_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <% if !@alert_messages.blank? %>  
      <div class = "alert alert-info">         
        <% @alert_messages.each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    <% end %>
    <% if !@success_messages.blank? %> 
      <div class = "alert alert-success">         
        <% @success_messages.each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    <% end %>
     
    <div class = "block">
      <div class = "head">
        <div class = "icon">
          <span class = "ico-expand"></span>
        </div>
        <h2>Créer un type d'ayant droit</h2>
      </div>
      <div class = "data-fluid">
        <!--<%#= form_tag ("/inheritor_type/create") do %>
          <%#= devise_error_messages! %>
          <div class = "<%= @labelcss %>">
            <div class = "span3">Libellé</div>
            <div class = "span9">	                      
              <%#= text_field_tag "label", params[:label], :placeholder => "Libellé du type d'ayant droit" %>                 
            </div>            
          </div>         
                 
          <div class = "row-form">
            <div class="span9">
              <%#= button_tag(:name => "Créer un type d'ayant droit", :data => {:disable_with => "Veuillez patienter"}, :class => "btn") do %>
                Créer un type d'ayant droit <div class="icon-arrow-next icon-white"></div> 
              <%# end %>
            </div>
          </div>
        <%# end %>-->
      </div>
    </div>
  </div>
  
  <div class = "span6">
    <div class = "block">
      <div class = "head">
        <div class = "icon">
          <span class = "ico-list-3"></span>
        </div>
        <h2>Liste des types ayants droits</h2>
      </div>
      <div class = "head green" >
		    <div class = "icon" >
		      <span class = "ico-pen-2"></span>		      
		    </div>  
		    <h2>Visualisation des types d'ayants droits</h2>
		  </div>	
		  <div id="services">
        <table cellpadding = "0" cellspacing = "0" width = "100%" class = "table">
          <thead>
            <tr>
              <th width = "100%">Nom</th>
            </tr>
          </thead>
          <tbody>
            <% if @inheritors_types.blank? %>
			        <tr>
				        <td>Aucun type d'ayant droit présent dans la base de données</td>
			        </tr>
		        <% else %>
		          <% @inheritors_types.each do |inheritor_type| %>		    
		            <tr>		        
					        <td>
					          <%= inheritor_type.label %>
					        </td>					        
			          </tr>
			        <% end %>
		        <% end %>
          </tbody>
        </table>	
		  </div>	 
		  <% unless @inheritors_types.blank? %>
		    <div id = "pagination">
          <%= paginate @inheritors_types, :params => { :controller => :inheritor_types, :action => :index } %>
        </div>
      <% end %> 
    </div>
  </div>
</div>
